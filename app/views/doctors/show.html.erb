<h1>Doctor's Appointments</h1>

<%= @doctor.name %>
<%= @doctor.department %>

<% @doctor.appointments.each do |app|%>
<p><%=app.appointment_datetime.strftime("%B %d, %Y")%><%= app.appointment_datetime.strftime(" at %H:%M") %></p>

<%= link_to app.patient.name, patient_path(app.patient)%>

<% end %>




